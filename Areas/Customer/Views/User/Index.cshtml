
@model IEnumerable<ShoppingStore.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h1 class="text-info">Application User List</h1>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i> &nbsp; New User</a>
    </div>
</div>
<br />
<br />
<table class="table table-striped border">
    <tr class="table-striped bg-info">
        <th>Firs tName</th>
        <th>Last Name</th>
        <th>User Name</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.FirstName</td>
    <td>@item.LastName</td>
    <td>@item.UserName</td>
    <td class="text-info text-uppercase">Active</td>
    <td></td>
    <td>
        <partial name="_PartialView" model="@item.Id" />
    </td>


</tr>
    }
</table>

@section scripts{
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
                if (save != '') {
                    alertify.success(save);
                }
                var edit = '@TempData["edit"]'
                if (edit != '') {
                    alertify.success(edit);
                }
                var deleteData = '@TempData["delete"]'
                if (deleteData != '') {
                    alertify.success(deleteData);
                }
        })
    </script>
}