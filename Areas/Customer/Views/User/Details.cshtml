@model ShoppingStore.Models.ApplicationUser
@{
    ViewData["Title"] = "Details";
}

<h2>User Details</h2>

<div class="">
    <form asp-action="Details" method="post" id="basic-form">

        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>

        <div class="p-4 rounded border">
            <h1>@ViewBag.save</h1>
            <div class="form-group row">
                <input asp-for="Id" type="hidden" value="@Model.Id" />
                <div class="col-2">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <div class="col-6">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                </div>

            </div>
        </div>
    </form>
</div>


