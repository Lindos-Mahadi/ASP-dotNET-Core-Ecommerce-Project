@using ShoppingStore.Models
@model IEnumerable<Products>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 20px; color: brown">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" class="img-fluid card-img-top" alt="card-image" style="height: 300px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group ">
                            <label class="btn btn-secondary"><strong>Price : @product.Price</strong></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-info pull-right btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br />
<br />