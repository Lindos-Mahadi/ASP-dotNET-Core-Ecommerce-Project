@using ShoppingStore.Models;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-6 col-lg-3 col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 20px; color: brown">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" class="img-fluid card-img-top" alt="card-image" style="height: 300px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="btn btn-secondary btn-sm"><strong>Price : @product.Price</strong></label>

                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-info btn-sm pull-right btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="pagination-container">
    <ul class="pagination">
        <li class="active">
            @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c),X.PagedList.Web.Common.PagedListRenderOptions.TwitterBootstrapPagerAligned)
        </li>
    </ul>
</div>
<br />
<br />